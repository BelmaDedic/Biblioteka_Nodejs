<html lang="en">
<%- include("./partials/head.ejs") %>

<body>

    <%- include("./partials/nav.ejs") %>
    <div class="books">
        <h1>Books</h1>
        <% if(books.length > 0) {%> 
            <% books.forEach(book => { %>
                <div class="book">
                    <a href="/books/<%= book.id %>">
                        <h3 class="title">Title: <%= book.title %> </h3>
                        <p class="author">Author: <%= book.author %> </p>
                    </a>
                </div>
            <% }) %>
        <% } %>
    </div>

</body>
</html>